<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<screen id="onlineScreen" controller="fr.lyrgard.hexScape.gui.desktop.controller.online.OnlineScreenController">
		<layer id="foreground" childLayout="center">
			<panel width="100%" height="100%" childLayout="vertical">
				<panel id="" width="100%" height="200px" backgroundColor="#f008">
				</panel>
				<panel width="100%" height="*" childLayout="horizontal" backgroundColor="#0f08">
					<panel width="300" height="100%" childLayout="vertical" backgroundColor="#00f8">
					
					</panel>
					<control id="gameChat" valign="bottom" name="nifty-chat" width="*" height="100%" lines="12" sendLabel="${i18n.sendChatMessage}"/>
				</panel>
				
			</panel>				
		</layer>
	</screen>
</nifty>