<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<controlDefinition name="imageButtonText" style="nifty-panel-style" 
		controller="fr.lyrgard.hexScape.gui.desktop.controller.DefaultImageButtonController"
		buttonImage="$image" buttonText="$text" textWidth="$textWidth"
		onClickMethod="doOnClick()">
		<panel style="imageButtonActivated" childLayout="absolute" focusable="true" visibleToMouse="true" width="$width" heigth="$height">
			<image id="#imageButtonImage" filename="$buttonImage" x="0px" y="0px" />
			<panel childLayout="center" x="39px" y="7px" height="32px" width="$textWidth">
				<image filename="gui/images/buttonTextBackground.png" imageMode="resize:0,8,10,15,0,12,6,2,0,8,10,15" width="$textWidth" heigth="32px" align="left"/>
				<panel childLayout="horizontal" align="left" height="32px">
					<panel width="5px"/>
					<text text="$buttonText" style="uiLabel24" valign="center"/>
				</panel>	
			</panel>
			<interact onClick="$onClickMethod" />
		</panel>
	</controlDefinition>
</nifty-controls>