<nifty-controls xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <controlDefinition style="nifty-textfield" name="textfield"
                       controller="de.lessvoid.nifty.controls.textfield.TextFieldControl"
                       inputMapping="de.lessvoid.nifty.controls.textfield.TextFieldInputMapping"
                       passwordChar="$passwordChar" maxLength="$maxLength">
		<panel style="#panel" focusable="true" visibleToMouse="true">
			<interact onClick="onClick()" onClickMouseMove="onClickMouseMove()"/>
        
			<image filename="gui/images/textfield/textfieldBackground.png" width="100%"  imageMode="resize:10,8,10,15,4,20,4,2,10,8,10,15"/>
			<panel childLayout="horizontal" visibleToMouse="false">
				<panel width="10px"/>
				<panel childLayout="overlay">        
		            <panel id="#field" style="#field">
		                <text id="#text" style="#text" text="$text"/>
		            </panel>
		            <panel style="#cursor-panel">
		                <image id="#cursor" style="#cursor"/>
		            </panel>
		        </panel>
		        <panel width="10px"/>
        	</panel>
        </panel>
    </controlDefinition>
</nifty-controls>