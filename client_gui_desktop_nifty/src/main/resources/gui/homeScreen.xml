<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<screen id="homeScreen" controller="fr.lyrgard.hexScape.gui.desktop.controller.home.HomeScreenController">
		<layer id="foreground" childLayout="center">
			<!-- <effect>
				<onCustom customKey="startScreen" name="fade" start="#00" end="#ff" startDelay="1000" length="500" />
				<onEndScreen name="fade" start="#ff" end="#00" length="200" neverStopRendering="true"/>
			</effect> -->
			<image filename="gui/images/textfield/textfieldBackground.png" imageMode="resize:10,8,10,15,6,16,6,2,10,8,10,15" height="450px" width="550px"/>
			<panel height="450px" width="550px" childLayout="vertical">
				<panel height="*"/>
				<control name="imageButtonTextTitle" align="center" height="88" width="377" textWidth="300" valign="center" visibleToMouse="true"
					id="soloGameButton" 
					goTo="loadGameScreen"   
					image="gui/images/soloGameWithText.png" 
					text="${i18n.soloGame}" />
				<panel height="20px"/>
				<control name="imageButtonTextTitle" align="center" height="88" width="377" textWidth="300" valign="center" visibleToMouse="true"
					id="multiplayerGameButton" 
					goTo="gameScreen"   
					image="gui/images/multiplayerGameWithText.png" 
					text="${i18n.multiplayerGame}" />
				<panel height="20px"/>	
				<control name="imageButtonTextTitle" align="center" height="88" width="377" textWidth="300" valign="center" visibleToMouse="true"
					id="optionButton"    
					image="gui/images/optionWithText.png" 
					text="${i18n.option}" />
				<panel height="*"/>	
			</panel>
			<panel id="panel_bottom_right" height="150px" width="100%" valign="bottom" childLayout="center" paddingRight="20px" paddingBottom="20px">
				<control name="imageButtonText" id="quitButton" align="right" valign="bottom" height="48" width="240" textWidth="200" visibleToMouse="true"
						controller="fr.lyrgard.hexScape.gui.desktop.controller.home.QuitButtonController"   
						image="gui/images/quitWithText.png" 
						text="${i18n.quit}" />	
			</panel>
		</layer>
	</screen>
</nifty>