<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<screen id="homeScreen" controller="fr.lyrgard.hexScape.gui.desktop.controller.home.HomeScreenController">
		<layer id="foreground" childLayout="vertical">
			<panel id="panel_top" height="25%" width="75%" align="center" childLayout="horizontal">
				<panel id="panel_top_left" height="50%" width="50%" valign="center"	childLayout="center">
					<control name="imageButton" align="center" height="125" width="400" valign="center" visibleToMouse="true"  
						id="soloGameButton" 
						goTo="loadGameScreen"
						image="gui/images/home/soloGame.png" 
						imageHover="gui/images/home/soloGameHover.png" 
						imagePressed="gui/images/home/soloGame.png" />
				</panel>
				<panel id="panel_top_right" height="50%" width="50%"	valign="center" childLayout="center">
					<control name="imageButton" id="multiplayerGameButton" goTo="gameScreen" align="center" height="125" width="440" valign="center" visibleToMouse="true"  image="gui/images/home/multiplayerGame.png" imageHover="gui/images/home/multiplayerGameHover.png" imagePressed="gui/images/home/multiplayerGame.png" />
				</panel>
			</panel>
			<panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center">
			</panel>
			<panel id="panel_bottom" height="25%" width="100%" align="center" childLayout="horizontal">
				<panel id="panel_bottom_left" height="100%" width="50%" valign="center" childLayout="center" paddingLeft="20px" paddingBottom="20px">
					<control name="button" label="Option" id="optionButton"  align="left" valign="bottom" visibleToMouse="true">
					</control>
				</panel>
				<panel id="panel_bottom_right" height="100%" width="50%" valign="center" childLayout="center" paddingRight="20px" paddingBottom="20px">
					<control name="button" label="Quit" id="quitButton" align="right" valign="bottom">
					</control>
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>