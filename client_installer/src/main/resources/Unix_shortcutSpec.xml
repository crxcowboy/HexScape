<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
	<skipIfNotSupported/>
	<programGroup defaultName="HexScape" location="applications"/>
	<shortcut
		name="HexScape"
		target="/usr/bin/java"
		commandLine="-jar $INSTALL_PATH/HexScape.jar"
		description="Launch HexScape"

		workingDirectory="$INSTALL_PATH"
		initialState="maximized"
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		type="Application"
		terminal="true"
		encoding="UTF-8">
		<!-- 		iconFile="$INSTALL_PATH/images/MyApp.png"  -->	
		<createForPack name="Core files"/>
	</shortcut>

</shortcuts>