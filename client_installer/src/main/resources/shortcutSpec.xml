<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="HexScape"
                location="applications"/>
  <shortcut
    name="HexScape"
    target="$INSTALL_PATH\HexScape.jar"
    description="Launch HexScape"
    workingDirectory="$INSTALL_PATH"
    iconFile="$INSTALL_PATH\hexscape.ico"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
	startMenu="no"
	startup="no">

    <createForPack name="Core files"/>
  </shortcut>
</shortcuts>